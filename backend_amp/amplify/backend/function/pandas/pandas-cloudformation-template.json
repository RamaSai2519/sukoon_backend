{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "Lambda Function resource stack creation using Amplify CLI",
    "Parameters": {
        "CloudWatchRule": {
            "Type": "String",
            "Default" : "NONE",
            "Description" : " Schedule Expression"
        },
        "deploymentBucketName": {
            "Type": "String"
        },
        "env": {
            "Type": "String"
        },
        "s3Key": {
            "Type": "String"
        }
        ,
    
    
    
        "apibackendampGraphQLAPIIdOutput": {
            "Type": "String",
            "Default": "apibackendampGraphQLAPIIdOutput"
            },
        
        "apibackendampGraphQLAPIEndpointOutput": {
            "Type": "String",
            "Default": "apibackendampGraphQLAPIEndpointOutput"
            },
        
        "apibackendampGraphQLAPIKeyOutput": {
            "Type": "String",
            "Default": "apibackendampGraphQLAPIKeyOutput"
            },
        
    
        
    
        "apisukoonAPIApiName": {
            "Type": "String",
            "Default": "apisukoonAPIApiName"
            },
        
        "apisukoonAPIApiId": {
            "Type": "String",
            "Default": "apisukoonAPIApiId"
            }
        
    
        
    
    },
    "Conditions": {
        "ShouldNotCreateEnvResources": {
            "Fn::Equals": [
                {
                    "Ref": "env"
                },
                "NONE"
            ]
        }
    },
    "Resources": {
        "LambdaFunction": {
          "Type": "AWS::Lambda::Function",
          "Metadata": {
            "aws:asset:path": "./src",
            "aws:asset:property": "Code"
          },
          "Properties": {
            "Code": {
                "S3Bucket": {
                    "Ref": "deploymentBucketName"
                },
                "S3Key": {
                    "Ref": "s3Key"
                }
            },
            "Handler": "index.handler",
            "FunctionName": {
                "Fn::If": [
                    "ShouldNotCreateEnvResources",
                    "pandas",
                    {

                        "Fn::Join": [
                            "",
                            [
                                "pandas",
                                "-",
                                {
                                    "Ref": "env"
                                }
                            ]
                        ]
                    }
                ]
            },
            "Environment": {
                "Variables" : {"ENV":{"Ref":"env"},"REGION":{"Ref":"AWS::Region"},"API_BACKENDAMP_GRAPHQLAPIIDOUTPUT":{"Ref":"apibackendampGraphQLAPIIdOutput"},"API_BACKENDAMP_GRAPHQLAPIENDPOINTOUTPUT":{"Ref":"apibackendampGraphQLAPIEndpointOutput"},"API_BACKENDAMP_GRAPHQLAPIKEYOUTPUT":{"Ref":"apibackendampGraphQLAPIKeyOutput"},"API_SUKOONAPI_APINAME":{"Ref":"apisukoonAPIApiName"},"API_SUKOONAPI_APIID":{"Ref":"apisukoonAPIApiId"},"API_BACKENDAMP_SCHEDULEDJOBSTABLE_NAME":{"Fn::ImportValue":{"Fn::Sub":"${apibackendampGraphQLAPIIdOutput}:GetAtt:ScheduledJobsTable:Name"}},"API_BACKENDAMP_SCHEDULEDJOBSTABLE_ARN":{"Fn::Join":["",["arn:aws:dynamodb:",{"Ref":"AWS::Region"},":",{"Ref":"AWS::AccountId"},":table/",{"Fn::ImportValue":{"Fn::Sub":"${apibackendampGraphQLAPIIdOutput}:GetAtt:ScheduledJobsTable:Name"}}]]}}
            },
            "Role": { "Fn::GetAtt": ["LambdaExecutionRole", "Arn"] },
            "Runtime": "python3.8",
            "Layers": [],
            "Timeout": 25
          }
        },
        "LambdaExecutionRole": {
            "Type": "AWS::IAM::Role",
            "Properties": {
                "RoleName": {
                    "Fn::If": [
                        "ShouldNotCreateEnvResources",
                        "backendampLambdaRolef24923c9",
                        {

                            "Fn::Join": [
                                "",
                                [
                                    "backendampLambdaRolef24923c9",
                                    "-",
                                    {
                                        "Ref": "env"
                                    }
                                ]
                            ]
                        }
                    ]
                },
                "AssumeRolePolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Effect": "Allow",
                            "Principal": {
                                "Service": [
                                    "lambda.amazonaws.com"
                                ]
                            },
                            "Action": [
                                "sts:AssumeRole"
                            ]
                        }
                    ]
                }
            }
        }
        ,"lambdaexecutionpolicy": {
            "DependsOn": ["LambdaExecutionRole"],
            "Type": "AWS::IAM::Policy",
            "Properties": {
                "PolicyName": "lambda-execution-policy",
                "Roles": [{ "Ref": "LambdaExecutionRole" }],
                "PolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Effect": "Allow",
                            "Action": ["logs:CreateLogGroup",
                            "logs:CreateLogStream",
                            "logs:PutLogEvents"],
                            "Resource": { "Fn::Sub": [ "arn:aws:logs:${region}:${account}:log-group:/aws/lambda/${lambda}:log-stream:*", { "region": {"Ref": "AWS::Region"}, "account": {"Ref": "AWS::AccountId"}, "lambda": {"Ref": "LambdaFunction"}} ]}
                        }
                    ]
                }
            }
        }
        ,"AmplifyResourcesPolicy": {
            "DependsOn": ["LambdaExecutionRole"],
            "Type": "AWS::IAM::Policy",
            "Properties": {
                "PolicyName": "amplify-lambda-execution-policy",
                "Roles": [{ "Ref": "LambdaExecutionRole" }],
                "PolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [{"Effect":"Allow","Action":["appsync:GraphQL"],"Resource":[{"Fn::Join":["",["arn:aws:appsync:",{"Ref":"AWS::Region"},":",{"Ref":"AWS::AccountId"},":apis/",{"Ref":"apibackendampGraphQLAPIIdOutput"},"/types/Query/*"]]},{"Fn::Join":["",["arn:aws:appsync:",{"Ref":"AWS::Region"},":",{"Ref":"AWS::AccountId"},":apis/",{"Ref":"apibackendampGraphQLAPIIdOutput"},"/types/Mutation/*"]]},{"Fn::Join":["",["arn:aws:appsync:",{"Ref":"AWS::Region"},":",{"Ref":"AWS::AccountId"},":apis/",{"Ref":"apibackendampGraphQLAPIIdOutput"},"/types/Subscription/*"]]}]},{"Effect":"Allow","Action":["apigateway:POST","apigateway:PUT","apigateway:GET","apigateway:HEAD","apigateway:OPTIONS","apigateway:PATCH","apigateway:DELETE"],"Resource":[{"Fn::Join":["",["arn:aws:apigateway:",{"Ref":"AWS::Region"},"::/restapis/",{"Ref":"apisukoonAPIApiName"},"/*"]]}]},{"Effect":"Allow","Action":["dynamodb:Put*","dynamodb:Create*","dynamodb:BatchWriteItem","dynamodb:PartiQLInsert","dynamodb:Get*","dynamodb:BatchGetItem","dynamodb:List*","dynamodb:Describe*","dynamodb:Scan","dynamodb:Query","dynamodb:PartiQLSelect","dynamodb:Update*","dynamodb:RestoreTable*","dynamodb:PartiQLUpdate","dynamodb:Delete*","dynamodb:PartiQLDelete"],"Resource":[{"Fn::Join":["",["arn:aws:dynamodb:",{"Ref":"AWS::Region"},":",{"Ref":"AWS::AccountId"},":table/",{"Fn::ImportValue":{"Fn::Sub":"${apibackendampGraphQLAPIIdOutput}:GetAtt:ScheduledJobsTable:Name"}}]]},{"Fn::Join":["",["arn:aws:dynamodb:",{"Ref":"AWS::Region"},":",{"Ref":"AWS::AccountId"},":table/",{"Fn::ImportValue":{"Fn::Sub":"${apibackendampGraphQLAPIIdOutput}:GetAtt:ScheduledJobsTable:Name"}},"/index/*"]]}]}]
                }
            }
        }
        
        
        
    },
    "Outputs": {
        "Name": {
            "Value": {
                "Ref": "LambdaFunction"
            }
        },
        "Arn": {
            "Value": {"Fn::GetAtt": ["LambdaFunction", "Arn"]}
        },
        "Region": {
            "Value": {
                "Ref": "AWS::Region"
            }
        },
        "LambdaExecutionRole": {
            "Value": {
                "Ref": "LambdaExecutionRole"
            }
        }
        
    }
}
